{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Portal 2 TAS script",
	"patterns": [{"include": "#keywords"}],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.p2tas_start",
				"match": "\\bstart\\b"
			},
			{
				"name": "keyword.other.start_args",
				"match": "\\b(now|save|map)\\b"
			},
			{
				"name": "keyword.other.tools_args",
				"match": "\\b(strafe|autojump|absmov)\\b"
			},
			{
				"name": "variable.parameter",
				"match": "\\b(on|off|none|vec|ang|veccam|max|keep|ups|forward|left|right|deg)\\b"
			},
			{
				"name":"string",
				"match": ">|\\|"
			},
			{
				"name": "constant.numeric.tick_number",
				"match": "^\\d+"
			},
			{
				"name": "comment",
				"match": "^//.*"
			}]
		}
	},
	"scopeName": "source.p2tas"
}

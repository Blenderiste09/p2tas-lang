{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Portal 2 TAS script",
	"patterns": [{"include": "#start"}, {"include": "#framebulk"}],
	"repository": {
		"start": {
			"patterns": [{
				"name": "start_tas",
				"match": "^\\s*(start)\\s*(now|save|map|next|cm)?",
				"captures": {
					"1": {"name": "keyword.control"},
					"2": {"name": "keyword.other"}
				}
			}]
		},
		"framebulk": {
			"patterns": [{
				"name": "keyword.other.tools_args",
				"match": "\\b(strafe|autojump|absmov|setang|autoaim)\\b"
			},
			{
				"name": "variable.parameter",
				"match": "\\b(on|off|none|vec|ang|veccam|max|keep|ups|forward|left|right|deg)\\b"
			},
			{
				"name":"string",
				"match": ">|\\|"
			},
			{
				"name": "constant.numeric.tick_number",
				"match": "^\\s*\\+?\\d+"
			},
			{
				"name": "comment",
				"match": "\\s*//.*"
			}]
		}
	},
	"scopeName": "source.p2tas"
}
